<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color:rgb(39, 25, 150)">
    <a class="navbar-brand" href="/scheds" style="font-family: 'Helvetica', cursive; color:rgb(255, 255, 255); font-size: 40px; padding-top: 0px;"><u><strong><em>FantasyPal</em></strong></u></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/scheds">My Matchups</a>
        <a class="nav-item nav-link" href="/scheds/new">Compare Schedules</a>
      </div>
    </div>
    <% if (user) { %>
      <form class="form-inline" action="/logout" method="POST" style="padding-top: 0px">
        <span style="color: white"> <%= user.email %> </span>
        <button type="submit" class="btn btn-outline-danger" style="margin-left: 1em">Logout</button>
      </form>
      <%} else { %>
        <form class="form-inline" action="/login">
          <button type="submit" class="btn btn-outline-success" style="margin-right: 2em;">Login</button>
        </form>
        <form class="form-inline" action="/register">
          <button type="submit" class="btn btn-outline-success">Register</button>
        </form>
        <% } %>
      </nav>
    </header>