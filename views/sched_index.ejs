<body>
  <%- include ('partials/_header.ejs') %>

    <main style="margin: 1em;">
      <h3 style="color: white">My Matchups</h3>
      <% if (user) { %>
        <table class="table">
          <thead>
            <tr>
              <th style="color: white" scope="col">Teams</th>
              <th style="color: white" scope="col">Date</th>
              <th style="color: white" scope="col">Coinciding Dates</th>

            </tr>
          </thead>
          <tbody>
            <% for(let sched in scheds) { %>
              <tr>
                <td>
                  <%= sched %>
                </td>
                <td>
                  <%= scheds[sched].longsched %>
                </td>
                <td>
                  <form method="POST" action="/scheds/<%= sched %>/delete">
                    <button type="submit" style="border-color: red; background-color: white; color: red;"
                      class="btn btn-primary">Delete</button>
                  </form>
                </td>
                <td>
                  <form method="GET" action="/scheds/<%= sched %>">
                    <button type="submit" style="border-color: blue; background-color: white; color: blue;"
                      class="btn btn-primary">Edit</button>
                  </form>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
        <% } else { %>
          <h5> Access denied. You must be logged in to access this page.</h5>
          <% } %>
    </main>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
